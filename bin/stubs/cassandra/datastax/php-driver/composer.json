    "php": ">=5.5.0",
    "ext-cassandra": "*",
    "behat/behat": "~3.0.6",
    "phpunit/php-code-coverage": "~2.0",
    "phpunit/php-token-stream": "~1.3",
    "phpunit/phpunit": "~4.8",
    "symfony/process": "~2.1"
